/* pages/information/information.wxss */

.pic {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.information {
  padding-top: 130px;
  text-align: center;
  margin-left: 5%;
  width: 90%;
}

.intention {
  background-color: fff;
  padding: 5px 0;
  box-shadow: -1px 1px 5px #f1f1f1;
  position: relative;
  padding-top: 40px;
}

.information .intention-title {
  position: absolute;
  height: 30px;
  width: 100px;
  left: 50%;
  transform: translateX(-50%);
  top: -15px;
  text-align: center;
  border: 1px solid #ba0505;
  background-color: #fff;
  line-height: 30px;
  color: #746868;
  font-size: 16px;
  border-radius: 5px;
}

.information .intention-content {
  font-size: 24px;
  color: #ba0505;
}

/* 基本信息 */

.wapper {
  margin-top: 40px;
  text-align: left;
  padding: 15px 10px 5px;
  position: relative;
  box-shadow: -1px 1px 5px #f1f1f1;
}

.personal .basic {
  margin: 10px 15px;
}

.personal-basic {
  position: absolute;
  height: 30px;
  width: 100px;
  left: 50%;
  transform: translateX(-50%);
  top: -15px;
  text-align: center;
  border: 1px solid #ba0505;
  background-color: #fff;
  line-height: 30px;
  color: #746868;
  font-size: 16px;
  border-radius: 5px;
}

.personal .basic .basic-content {
  margin-left: 10px;
}

/* github */

.github {
  padding-top: 40px;
}

.github .github-content image {
  width: 25px;
  height: 25px;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 25px;
}

.github .github-content {
  margin: 10px 0;
  text-align: center;
}

/* 底部 */

.bottom {
  height: 50px;
  width: 100%;
}